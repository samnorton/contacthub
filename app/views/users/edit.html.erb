
<!-- Form Start -->
<section class="form-box">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 mx-auto center-box">
        <div class="card">
          <div class="card-header">
            <h2 class="display-5 main-text-blue text-center font-weight-bold">Edit User</h2>
          </div>
          <div class="card-body">

          <%= form_for @user do |f| %>
            <div class="form-group">
            <div class="wrap" id="avatar-container">
            <div class="valign-middle">
                <div class="form-group">
                      <div class="form-group">
                      <%= image_tag @user.user_avatar.attached? ? @user.user_avatar : "100x100.png", class: "img-responsve img-preview" %>
                      <label for="file" class="sr-only">Choose Image</label>
                      <div class="input-file">
                        <span class="btn"> Choose Image </span>
                         <span class="file-selected"></span>
                         <%= f.file_field :user_avatar, id: "file" %>
                    </div>
                </div>
                </div>
            </div>
          </div>
              </div>

              <div class="form-group">
                <%= f.label :name %><br />
                <%= f.text_field :name, class: "form-control", id: "name", placeholder: "Your Name.." %>
              </div>


              <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, class: "form-control", id: "email",  placeholder: "Your Email.." %>
             </div>


              <div class="form-group">
                 <%= f.label :password %><br />
                 <%= f.password_field :password, class: "form-control", id: "password", placeholder: "Your New Password.." %>
              </div>

              <%= f.submit "Update User", class: "btn btn-primary main-btn mb-2" %>
            
          </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>
</section>

