<!-- Search Bar Start -->
  <section id="search-bar">
    <div class="container">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-12 mx-auto">

           <%= form_tag(contacts_path, class: "form-inline", role: "search", method: :get) do %>
               <%= text_field_tag :term, params[:term], class: "form-control search-input", id: "term", placeholder: "Search..", autocomplete: "off" %>
               <%= hidden_field_tag :category_id, params[:category_id] %>
               <button class="btn btn-primary btn-lg main-btn search-btn" type="submit">Search</button>
          <% end %>

        </div>
      </div>
    </div>
  </section>
<!-- Search Bar End -->