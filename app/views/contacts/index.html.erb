<%= render 'layouts/searchbar' %>
<!-- Main Content Start -->
  <section id="main-content">
    <div class="container">
      <div class="row">

        <div class="col-lg-3 col-md-12 col-sm-12 col-12 mr-5" id="sidebar">
           <%= render 'layouts/sidebar_nav' %>
        </div>

        <div class="col-lg-8">
          <div class="card">
            <div class="card-header">
              <strong class="float-left mt-1">Contact List</strong> <span>
              
              <%= link_to new_contact_path, class: "btn btn-primary border-button float-right", ":data-target" => "#new-contact-modal", ":data-toggle" => "modal" do %>
                   <span><i class="fa fa-plus white"></i> Add New</span>
               <% end %>

             </span>
            </div>
            <%= render @contact %>
            <%= render 'layouts/pagination' %>
          </div>
        </div>
      </div>
    </div>
  </section>
<!-- Main Content End -->
